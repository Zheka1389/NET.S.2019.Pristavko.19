<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body style="font-family:Monotype Corsiva;">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ex" aria-controls="ex" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="ex">
                <div class="navbar-nav mr-auto mt-2 mt-lg-0" id="men">
                    @Html.ActionLink("Gallery", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "navbar-brand btn from-middle" })
                    @Html.ActionLink("Add Image", "Create", "Home", routeValues: null, htmlAttributes: new { @class = "navbar-brand btn from-middle" })
                    @Html.ActionLink("GalleryToDB", "Index", "HomeToDB", routeValues: null, htmlAttributes: new { @class = "navbar-brand btn from-middle" })
                    @Html.ActionLink("AddImageToDB", "Create", "HomeToDB", routeValues: null, htmlAttributes: new { @class = "navbar-brand btn from-middle" })
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="col-10" style="padding-top:15px">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
    </body>
</html>
